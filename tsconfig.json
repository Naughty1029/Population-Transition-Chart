{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    /* ファイル名の大文字小文字を区別 */
    "forceConsistentCasingInFileNames": true,
    /* 型チェック関係のオプション */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Module解決方法 */
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true,
  },
  "include": ["src/**/*.ts","src/**/*.tsx", "src/index.js"],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "src",
}